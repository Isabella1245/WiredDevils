//robot will only move forwards and backwards

package frc.robot;

import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.TimedRobot;
import edu.wpi.first.wpilibj.Timer;

import com.ctre.phoenix.motorcontrol.can.WPI_TalonSRX;
import edu.wpi.first.wpilibj.motorcontrol.MotorControllerGroup;

public class Robot extends TimedRobot {

  WPI_TalonSRX motorLeft1 = new WPI_TalonSRX(3);
  WPI_TalonSRX motorLeft2 = new WPI_TalonSRX(4);
  WPI_TalonSRX motorRight1 = new WPI_TalonSRX(5);
  WPI_TalonSRX motorRight2 = new WPI_TalonSRX(6);
  WPI_TalonSRX motorLinear1 = new WPI_TalonSRX(7);

  MotorControllerGroup leftGroup = new MotorControllerGroup(motorLeft1, motorLeft2);
  MotorControllerGroup rightGroup = new MotorControllerGroup(motorRight1, motorRight2);

  double deadband = 0.05;

  double xAxisLeft = 0;
  double yAxisLeft = 0;
  
  double leftTrigger = 0;

  Joystick controller = new Joystick(0);

  @Override
  public void robotInit() {

    leftGroup.setInverted(true);
  }

   @Override
  public void teleopPeriodic() {

    xAxisLeft = controller.getRawAxis(0);
    yAxisLeft = controller.getRawAxis(1);
    leftTrigger = controller.getRawAxis(2);

    if (yAxisLeft < deadband && yAxisLeft > -deadband ) {
      leftGroup.set(0);
      rightGroup.set(0);
    } else {

      if (yAxisLeft > deadband) {
        leftGroup.set(0.2);
        rightGroup.set(0.2);
      } else if (yAxisLeft < -deadband) {
        leftGroup.set(-0.2);
        rightGroup.set(-0.2);
      }
      
      //this is code to turn left. there is a problem.
      if (leftTrigger > deadband) {
        leftGroup.set(-0.2);
        rightGroup.set(0.2);
      }
     /* 
     Earlier i added the command for the left trigger button (to be used for turning left). 
     Right now, if i were to run this code. the robot would move forwards and backwards on command, using the yAxisLeft button. But if i press on the 
     left trigger, the robot would do nothing, even though the if statement says to turn left at a speed of 0.2 when I press the leftTrigger.
     why will it not work? (hint: you have to look through ALL the code to find it)
     */

    }



  }
}
